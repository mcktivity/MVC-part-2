@model Oblig2.Models.allMovies

@{
    ViewBag.Title = "NewMovie";
}

<hr />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-5">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav ml-auto text-uppercase">
            <li class="nav-item">
                <a href="@Url.Action("Accounts", "Oblig2" )" class="nav-item nav-link">Accounts</a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Purchases", "Oblig2" )" class="nav-item nav-link">Purchases</a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Movies", "Oblig2" )" class="nav-item nav-link">Movies</a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("LogOut", "Oblig2")" class="nav-item nav-link">Log out</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 col-lg-10 mx-auto">
            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()
                <div class="container">
                    <div class="row">
                        <div class="my-2 col-md-12 col-sm-12">
                            <span class="font-weight-light text-uppercase" style="font-size: xx-large">Edit account</span>
                        </div>
                        <div class="form-horizontal col-md-6">

                            <div class="form-group">
                                @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-12 font-weight-light text-uppercase", @style = "font-size:small" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger font-weight-light text-uppercase", @style = "font-size:small" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.year, htmlAttributes: new { @class = "control-label col-md-12 font-weight-light text-uppercase", @style = "font-size:small" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.year, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(model => model.year, "", new { @class = "text-danger font-weight-light text-uppercase", @style = "font-size:small" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dir, htmlAttributes: new { @class = "control-label col-md-12 font-weight-light text-uppercase", @style = "font-size:small" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.dir, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(model => model.dir, "", new { @class = "text-danger font-weight-light text-uppercase", @style = "font-size:small" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.price, htmlAttributes: new { @class = "control-label col-md-12 font-weight-light text-uppercase", @style = "font-size:small" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control col-md-12"} })
                                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger font-weight-light text-uppercase", @style = "font-size:small" })
                                </div>
                            </div>

                        </div>
                        <div class="form-horizontal col-md-6">

                            <div class="form-group">
                                @Html.LabelFor(model => model.plot, htmlAttributes: new { @class = "control-label col-md-12 font-weight-light text-uppercase", @style = "font-size:small" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.plot, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(model => model.plot, "", new { @class = "text-danger font-weight-light text-uppercase", @style = "font-size:small" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.imgurl, htmlAttributes: new { @class = "control-label col-md-12 font-weight-light text-uppercase", @style = "font-size:small" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.imgurl, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(model => model.imgurl, "", new { @class = "text-danger font-weight-light text-uppercase", @style = "font-size:small" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.vidurl, htmlAttributes: new { @class = "control-label col-md-12 font-weight-light text-uppercase", @style = "font-size:small" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.vidurl, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(model => model.vidurl, "", new { @class = "text-danger font-weight-light text-uppercase", @style = "font-size:small" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Save" class="col-sm-12 col-md-6 btn btn-sm btn-success font-weight-light text-uppercase m-1" />
                                    <a href="@Url.Action("Movies", "Oblig2")" class="col-sm-12 col-md-5 btn btn-sm btn-dark font-weight-light text-uppercase m-1">Back</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>